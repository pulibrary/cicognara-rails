<h1>Book</h1>

<p>Digital Cicognara Number: <%= @book.digital_cico_number %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Label</th>
      <th>Contributor</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @book.volumes.each do |volume| %>
      <% volume.versions.each do |version| %>
        <tr>
          <td><%= link_to version.label, book_volume_version_path(@book, volume, version) %></td>
          <td><%= version.contributing_library.label %></td>
          <td><%= link_to 'View', book_volume_version_path(@book, volume, version), class: 'btn btn-default' %>
              <%= link_to 'Edit', edit_book_volume_version_path(@book, volume, version), class: 'btn btn-primary' %>
              <%= link_to 'Destroy', book_volume_version_path(@book, volume, version), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= link_to 'Add Version', new_book_volume_version_path(@book, volume), class: 'btn btn-primary' %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to All Books', books_path, class: 'btn btn-default'  %>
