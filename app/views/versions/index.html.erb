<p id="notice"><%= notice %></p>

<h1>Listing Versions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @versions.each do |version| %>
      <tr>
        <td><%= link_to version.label, book_version_path(@book, version) %></td>
        <td><%= link_to 'Edit', edit_book_version_path(@book, version) %></td>
        <td><%= link_to 'Destroy', book_version_path(@book, version), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to Book', book_path(@book) %> |
<%= link_to 'Add Version', new_book_version_path(@book) %>
